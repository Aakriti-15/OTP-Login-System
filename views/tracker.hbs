<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Symptom Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css" />
</head>
<body>

  <!-- Navbar (same as login page) -->
  <nav>
  <h4>Wellness App</h4>
  <ul>
    <li><a href="/">Home</a></li>

    {{#if user}}
      <li><a href="/tracker">Symptom Tracker</a></li>
      <li><a href="/consult">Consult a Doctor</a></li>
      <li><a href="/grocery">Generate Grocery List</a></li>
      <li><a href="/dashboard">Dashboard</a></li>
      <li><a href="/auth/logout">Logout</a></li>
    {{else}}
      <li><a href="/login">Login</a></li>
      <li><a href="/register">Register</a></li>
    {{/if}}
  </ul>
</nav>


  <div class="container">
    <div class="card mx-auto" style="max-width: 500px;">
      <div class="card-header text-center">Track Your Symptoms</div>
      <div class="card-body">
        <form method="POST" action="/tracker">
  

  <div class="form-group mb-2">
    <label>Cramps Level</label>
    <select name="cramps" class="form-control" required>
      <option value="none">None</option>
      <option value="mild">Mild</option>
      <option value="severe">Severe</option>
    </select>
  </div>

  <div class="form-group mb-2">
    <label>Mood</label>
    <select name="mood" class="form-control" required>
      <option value="happy">Happy</option>
      <option value="irritated">Irritated</option>
      <option value="sad">Sad</option>
      <option value="anxious">Anxious</option>
    </select>
  </div>

  <div class="form-group mb-4">
    <label>Flow Level</label>
    <select name="flow" class="form-control" required>
      <option value="light">Light</option>
      <option value="moderate">Moderate</option>
      <option value="heavy">Heavy</option>
    </select>
  </div>

  <button type="submit" class="btn btn-success w-100">Save Log</button>
</form>

      </div>
    </div>
  </div>

  {{#if logs.length}}
  <div class="container mt-4">
    <div class="card mx-auto" style="max-width: 600px;">
      <div class="card-header text-center">Previous Logs</div>
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Cramps</th>
              <th>Mood</th>
              <th>Flow</th>
            </tr>
          </thead>
          <tbody>
            {{#each logs}}
            <tr>
              <td>{{this.date}}</td>
              <td>{{this.cramps}}</td>
              <td>{{this.mood}}</td>
              <td>{{this.flow}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  {{/if}}

</body>
</html>
